{
  "version": "1.0",
  "last_updated": "2025-09-04",
  "description": "URL formats específicos para cada scraper - separado de company_patterns",
  "formats": {
    "eventbrite": {
      "pattern": "https://www.eventbrite.{domain}/d/{country}--{city}--events/",
      "domains": {
        "España": "es",
        "France": "fr",
        "Brasil": "com.br", 
        "Argentina": "com.ar",
        "México": "com.mx",
        "Colombia": "co",
        "default": "com"
      },
      "country_mapping": {
        "España": "spain",
        "France": "france", 
        "Brasil": "brazil",
        "Argentina": "argentina",
        "México": "mexico",
        "Colombia": "colombia"
      },
      "enabled": true,
      "encoding": "standard"
    },
    "meetup": {
      "pattern": "https://www.meetup.com/find/?location={country_code}--{city}&source=EVENTS",
      "enabled": true,
      "encoding": "url_encode",
      "uses_iso_country_codes": true,
      "default_country": "us"
    },
    "facebook_api": {
      "pattern": "/search/events?query={city}&start_date={start_date}&end_date={end_date}",
      "base_url": "https://facebook-scraper3.p.rapidapi.com",
      "enabled": true,
      "encoding": "standard",
      "requires_api_key": true
    },
    "ticketmaster": {
      "pattern": "https://www.ticketmaster.{domain}/{path}/{city}",
      "domains": {
        "España": "es",
        "France": "fr",
        "Argentina": "com.ar",
        "México": "com.mx",
        "default": "com"
      },
      "paths": {
        "España": "city",
        "France": "city", 
        "default": "city"
      },
      "enabled": false,
      "disable_reason": "DNS/Connection errors consistently"
    },
    "bandsintown": {
      "pattern": "https://www.bandsintown.com/{city}/concerts",
      "enabled": false,
      "disable_reason": "HTTP 403 errors consistently",
      "encoding": "standard"
    },
    "dice": {
      "pattern": "https://dice.fm/{city}/music",
      "enabled": false,
      "disable_reason": "HTTP 403 errors consistently",
      "encoding": "standard"
    }
  },
  "encoding_rules": {
    "standard": "No special encoding",
    "url_encode": "Full URL encoding with urllib.parse.quote",
    "percent_encoding": "Spaces as %20, special chars encoded"
  },
  "metadata": {
    "total_scrapers": 6,
    "enabled_scrapers": 3,
    "purpose": "URL format patterns separated from business logic - cleaner architecture"
  }
}